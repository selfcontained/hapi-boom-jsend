//
// If you add any options in here, please add their description as well
//
{
	"asi"		: false,	// if automatic semicolon insertion should be tolerated
	"boss"		: true,		// if advanced usage of assignments should be allowed
	"browser"	: true,		// if the standard browser globals should be predefined
	"camelcase" : false, 	// if identifiers should be required in camel case
	"expr"      : true,		// if ExpressionStatement should be allowed as Programs
	"evil"		: true,		// if eval statements are allowed
	"jquery"	: true,		// if jQuery globals should be predefined
	"laxbreak"	: true,		// if line breaks should not be checked
	"laxcomma"	: true,		// if line breaks should not be checked around commas
	"loopfunc"	: true,		// if functions should be allowed to be defined within loops
	"onecase"   : true, 	// if one case switch statements should be allowed
	"smarttabs"	: true,		// if smarttabs should be tolerated (http://www.emacswiki.org/emacs/SmartTabs)
	"sub"       : true, 	// if all forms of subscript notation are tolerated
	"validthis"	: true,		// if 'this' inside a non-constructor function is valid.  This is a function scoped option only.
	"undef"		: true,		// This option prohibits the use of explicitly undeclared variables. This option is very useful for spotting leaking and mistyped variables.
	"unused"	: "vars",	// This option warns when you define and never use your variables.
	"trailing"	: true,		// This option makes it an error to leave a trailing whitespace in your code
	"node"		: true,		// node globals
	"phantom"	: true,		// phantom globals
	"nonstandard": true,	// This option defines non-standard but widely adopted globals such as escape and unescape.
	"globals"	: {
		"describe": true, // mocha
		"it": true, // mocha
		"before": true, // mocha
		"beforeEach": true, // mocha
		"after": true, // mocha
		"afterEach": true // mocha
	}
}
